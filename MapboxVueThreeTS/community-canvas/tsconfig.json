{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "ignoreDeprecations": "5.0",
    "noEmit": true,
    "lib": ["ES2017", "DOM"],
    "strictNullChecks": false,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
